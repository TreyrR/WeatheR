<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="100sp"
        android:layout_marginTop="30sp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:gravity="center_horizontal"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/hintColor"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/asset"
        android:gravity="center_horizontal"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_field"
        android:layout_marginHorizontal="160sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/design_default_color_primary"
        android:text="@string/button1_text"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/result_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/antic_didone"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/hintColor"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_marginHorizontal="160sp"
        android:layout_marginTop="50sp"
        app:srcCompat="@drawable/termic" />

</RelativeLayout>